<p> Edit Student Form </p>
<form class="" action="/students/<%= @student.id %>" method="post">

  <label for="house_select">Select a house:</label>
    <select id="house-select" name="house_id">
      <% for house in @houses %>
        <option value="<%= house.id %>" <%= 'selected' if @student.house_id == house.id %>> <%=house.name%> </option>
      <% end %>
    </select>
  </br>

  <label for="first-name">First name:</label>
    <input id="first-name" value="<%= @student.first_name %>" type="text" name="first_name">
  </br>

  <label for="last-name">Last name:</label>
    <input id="last-name" value="<%= @student.last_name %>" type="text" name="last_name">
  </br>

  <label for="age">Age:</label>
    <input id="age" value="<%= @student.age %>" type="text" name="age">
  </br>

  <input type="submit" value="Update student record">
</form>
